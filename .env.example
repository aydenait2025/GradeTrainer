# 数据库配置
DATABASE_URL=postgresql://ai_tuning_user:ai_tuning_password@localhost:5432/ai_tuning_db

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# 项目配置
PROJECT_NAME=AI Model Tuning System
VERSION=1.0.0
API_V1_STR=/api/v1

# CORS 配置
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# 文件上传配置
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR=uploads
MODEL_DIR=models

# GPU 配置
CUDA_VISIBLE_DEVICES=0
MAX_CONCURRENT_TRAINING=2

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production-very-important
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# 支持的模型列表
SUPPORTED_MODELS=meta-llama/Llama-2-7b-chat-hf,bigcode/starcoderbase-7b,microsoft/DialoGPT-medium

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 开发模式配置
DEBUG=False
TESTING=False

# Celery 配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 邮件配置（可选）
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 监控配置
ENABLE_METRICS=True
METRICS_PORT=9090

# 文件存储配置
STORAGE_TYPE=local  # local, s3, azure
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# 通知配置
ENABLE_NOTIFICATIONS=True
WEBHOOK_URL=https://your-webhook-url.com

# 性能配置
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# AI 模型配置
HUGGINGFACE_TOKEN=your-huggingface-token
MODEL_CACHE_DIR=/tmp/huggingface_cache
DEFAULT_MAX_LENGTH=512
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=0.0002

# 备份配置
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30
